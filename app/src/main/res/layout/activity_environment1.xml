<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:hwads="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Environment1"
    android:background="@color/LightSteelBlue">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/transparent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/trade_winds"
            android:padding="10dp"
            android:text="ENVIRONMENT"
            android:textAllCaps="true"
            android:textColor="@color/Black"
            android:textSize="40sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/weatheroxylogo">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="06dp"
                android:text="WEATHER REPORT"
                android:textColor="@color/Black"

                android:textSize="36sp" />

            <Button
                android:id="@+id/weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="30dp"
                android:background="@color/transparent"
                android:padding="20dp"
                android:text="OPEN WEATHER"
                android:textColor="@color/black"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/trailhomebg1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="10dp"
                android:text="LOCATE ME"
                android:textColor="@color/white"
                android:textSize="36sp" />

            <Button
                android:id="@+id/locateme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="33dp"
                android:background="@color/transparent"
                android:padding="20dp"
                android:text="Click for Location"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:backgroundTint="#E64A19" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/locatemebgoxy">

            <TextView
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="DIRECT ME"
                android:textColor="@color/black"

                android:textSize="36sp" />

            <Button
                android:id="@+id/maps"
                android:layout_width="wrap_content"
                android:layout_height="94dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="16dp"
                android:background="@color/transparent"
                android:padding="20dp"
                android:text="OPEN HUAWEI MAPS"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </RelativeLayout>
    </LinearLayout>

    <com.huawei.hms.ads.banner.BannerView
        android:id="@+id/hw_banner_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        hwads:adId="testw6vs28auh3"
        hwads:bannerSize="BANNER_SIZE_360_100"
        hwads:layout_constraintBottom_toBottomOf="parent"
        hwads:layout_constraintStart_toStartOf="parent"
        hwads:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>