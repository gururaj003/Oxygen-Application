<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hwads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cropplan"
    android:background="@color/igblue"
    >


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="372dp"
        android:layout_height="444dp"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="16dp"
        android:background="@color/transparent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.574"
        tools:ignore="MissingConstraints">

        <GridView
            android:id="@+id/corn"
            android:layout_width="172dp"
            android:layout_height="173dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginTop="50dp"
            android:background="@drawable/corn">


        </GridView>

        <GridView
            android:id="@+id/maize"
            android:layout_width="172dp"
            android:layout_height="173dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginTop="50dp"
            android:background="@drawable/maize">

        </GridView>

        <GridView
            android:id="@+id/tomato"
            android:layout_width="172dp"
            android:layout_height="173dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="60dp"
            android:background="@drawable/domado">

        </GridView>

        <GridView
            android:id="@+id/potato"
            android:layout_width="172dp"
            android:layout_height="173dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginTop="60dp"
            android:background="@drawable/podado">

        </GridView>

        <Button
            android:id="@+id/maize1"
            android:layout_width="171dp"
            android:layout_height="58dp"
            android:layout_row="0"
            android:layout_column="0"
            android:backgroundTint="@color/igorg"
            android:text="WHEAT"
            android:textSize="20dp"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/tomato1"
            android:layout_width="174dp"
            android:layout_height="71dp"
            android:layout_row="1"
            android:layout_column="0"
            android:backgroundTint="@color/igorg"
            android:text="Tomato"
            android:textSize="20dp" />

        <Button
            android:id="@+id/potato1"
            android:layout_width="173dp"
            android:layout_height="68dp"
            android:layout_row="1"
            android:layout_column="2"
            android:backgroundTint="@color/igorg"
            android:text="Potato"
            android:textSize="20dp" />

        <Button
            android:id="@+id/corn1"
            android:layout_width="171dp"
            android:layout_height="58dp"
            android:layout_row="0"
            android:layout_column="2"
            android:backgroundTint="@color/igorg"
            android:textSize="20dp"
            android:text="MAIZE" />

    </GridLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="175dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="179dp"
        android:layout_marginBottom="76dp"
        android:fontFamily="@font/trade_winds"
        android:text="CROPPLAN"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


    <com.huawei.hms.ads.banner.BannerView
        android:id="@+id/hw_banner_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="39dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        hwads:adId="testw6vs28auh3"
        hwads:bannerSize="BANNER_SIZE_360_57" />

</androidx.constraintlayout.widget.ConstraintLayout>
