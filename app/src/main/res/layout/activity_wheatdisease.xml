<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/envbgoxy"
    tools:context=".Wheatdisease">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="346dp"
        android:layout_height="52dp"
        android:fontFamily="@font/allerta"
        android:text="CHOOSE THE AFFECTED AREA"
        android:textColor="@color/Black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="33dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/wgrain" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="142dp"
        android:layout_height="139dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/wstem" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="144dp"
        android:layout_height="153dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toTopOf="@+id/root"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/wroot" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toTopOf="@+id/leaf"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/wleaf" />

    <Button
        android:id="@+id/grain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="29dp"
        app:cornerRadius="50dp"
        android:backgroundTint="@color/aglightblue"
        android:textColor="@color/black"
        android:text="GRAIN"
        app:layout_constraintBottom_toTopOf="@+id/imageView18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView15" />

    <Button
        android:id="@+id/stem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="34dp"
        android:text="STEM"
        app:cornerRadius="50dp"
        android:backgroundTint="@color/aglightblue"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/imageView19"
        app:layout_constraintStart_toEndOf="@+id/grain"
        app:layout_constraintTop_toBottomOf="@+id/imageView16" />

    <Button
        android:id="@+id/root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="148dp"
        android:text="ROOT"
        app:cornerRadius="50dp"
        android:backgroundTint="@color/aglightblue"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/leaf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="148dp"
        android:text="LEAF"
        app:cornerRadius="50dp"
        android:backgroundTint="@color/aglightblue"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>